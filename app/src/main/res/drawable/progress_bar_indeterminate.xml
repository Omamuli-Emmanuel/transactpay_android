<?xml version="1.0" encoding="utf-8"?>
<rotate
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:toDegrees="360"
    android:pivotX="50%"
    android:pivotY="50%">
    <shape android:shape="rectangle">
        <stroke
            android:width="4dp"
            android:color="@android:color/black" />
        <size
            android:width="40dp"
            android:height="40dp" />
    </shape>
</rotate>